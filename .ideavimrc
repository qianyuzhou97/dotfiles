let mapleader=' '

set clipboard+=unnamed
set number
set relativenumber
set incsearch
set hlsearch


" https://github.com/JetBrains/ideavim/wiki/IdeaVim-Plugins
set easymotion
set NERDTree
set highlightedyank
set commentary
set argtextobj
set textobj-entire
set ReplaceWithRegister
set exchange
set textobj-indent
set surround

noremap H ^
nnoremap L g_
nnoremap J 5j
nnoremap K 5k

vnoremap H ^
vnoremap L g_
vnoremap J 5j
vnoremap K 5k

map tn gt
map tp gT

nnoremap wv :action SplitVertically<CR>
nnoremap wh :action SplitHorizontally<CR>

nnoremap <c-h> <c-w>h
nnoremap <c-l> <c-w>l
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k

set idearefactormode=keep

map <leader>dd <Action>(Debug)
map <leader>rr <Action>(Run)
map [m <Action>(MethodUp)
map ]m <Action>(MethodDown)
map zc <Action>(CollapseRegion)
map zo <Action>(ExpandRegion)
map <leader>zc <Action>(CollapseAllRegions)
map <leader>zo <Action>(ExpandAllRegions)
map <leader>ca <Action>(Refactorings.QuickListPopupAction)
map <leader>rn <Action>(RenameElement)
map ]d <Action>(GotoNextError)
map [d <Action>(GotoPreviousError)
map <leader>sf <Action>(GotoFile)
map <leader>w <Action>(SaveAll)
map <leader>sg <Action>(SearchEverywhere)
map gr <Action>(FindUsages)
map gi <Action>(GotoImplementation)
map gd <Action>(GotoDeclaration)
map <leader>q <Action>(ShowErrorDescription)

map <leader>t :NERDTreeToggle<CR>
map <leader>f :NERDTreeFind<CR>
nmap s <Plug>(easymotion-s2)
vmap s <Plug>(easymotion-s2)
omap z <Plug>(easymotion-s2)
